{
  "expo": {
    "name": "Budget Copilot",
    "slug": "budget-copilot",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/BudgetCopilot.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/BudgetCopilot.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.omarx.budgetcopilot"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/BudgetCopilot.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/BudgetCopilot-Splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
